<%= form_for @book do |b| %>

  <div class="input-group">
    <%= b.label :título %><br>
    <%= b.text_field :title %>
  </div>

  <div class="input-group">
    <%= b.label :autor %><br>
    <%= b.text_field :author %>
  </div>

  <div class="input-group">
    <%= b.label :género %><br>
    <%= b.text_field :genre %>
  </div>

  <div class="input-group">
    <%= b.label :país %><br>
    <%= b.country_select :country, priority_countries: ["CL", "US", "GB", "AR", "FR", "IT", "ES"] %>
  </div>

  <div class="input-group">
    <%= b.label :editorial %><br>
    <%= b.text_field :editor %>
  </div>

  <div class="input-group">
    <%= b.label :año %><br>
    <%= b.text_field :year %>
  </div>

  <div class="input-group">
  <%= b.label :read, 'Leído' %><br>
  <%= b.radio_button :read, '1', :checked => true %><%= label :read, 'Si' %>
  <%= b.radio_button :read, '0', :checked => false %><%= label :read, 'No' %>
  </div>
  <div class="input-group">
    <%= b.label :borrowed, 'Prestado' %><br>
    <%= b.radio_button :borrowed, '1', :checked => false %><%= label :borrowed, 'Si' %>
    <%= b.radio_button :borrowed, '0', :checked => true %><%= label :borrowed, 'No' %>
  </div>

  <div class="input-group">
    <%= b.label :borrowed_to, 'Prestado a: ' %><br>
    <%= b.text_field :borrowed_to %>
  </div>

  <p>
  <%= b.submit %>
  </p>
<% end %>

