<%= render 'books/header' %>
<h1>Libros Prestados</h1>

<div class="panel panel-default">
    <table class="table">
        <tr>
            <th>Autor</th>
            <th>Título</th>
            <th>Morosa(o)</th>
            <th>Editar</th>
        </tr>

        <% Book.where('`borrowed` =?', true).each do |b| %>
            <tr>
                <td><%= b.author %></td>
                <td><%= link_to b.title, book_path(b) %></td>
                <td><%= b.borrowed_to %></td>
                <td><%= link_to '✍', edit_book_path(b), { :title => "Editar" } %></td>
            </tr>
         <% end %>
    </table>
</div>
